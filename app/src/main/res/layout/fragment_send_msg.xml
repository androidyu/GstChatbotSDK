<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.fragment.SendMsgFragment">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="34dp"
            android:layout_marginTop="28dp"
            android:text="@{@string/send_target}"
            android:textColor="@color/colorBlack33"
            android:textSize="14dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_goneMarginTop="30dp" />

        <EditText
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="52dp"
            android:layout_marginRight="24dp"
            android:background="@drawable/shape_sendmsg_edit_corner"
            android:hint="@string/send_number_hint"
            android:paddingLeft="10dp"
            android:textSize="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="34dp"
            android:layout_marginTop="110dp"
            android:text="@{@string/industry}"
            android:textColor="@color/colorBlack33"
            android:textSize="14dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_goneMarginTop="30dp" />

        <Spinner
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="134dp"
            android:layout_marginRight="24dp"
            android:background="@drawable/shape_sendmsg_edit_corner"
            android:paddingLeft="10dp"
            android:textSize="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="34dp"
            android:layout_marginTop="190dp"
            android:text="@{@string/msg_model}"
            android:textColor="@color/colorBlack33"
            android:textSize="14dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_goneMarginTop="30dp" />


        <Spinner
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="214dp"
            android:layout_marginRight="24dp"
            android:background="@drawable/shape_sendmsg_edit_corner"
            android:paddingLeft="10dp"
            android:textSize="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="298dp"
            android:layout_marginRight="24dp"
            android:background="@drawable/shape_button_corner"
            app:layout_constraintLeft_toLeftOf="parent"
            android:text="@{@string/send}"
            android:textColor="@color/colorWhite"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="364dp"
            android:layout_marginRight="24dp"
            android:background="@drawable/shape_checkmsg_corner"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:textColor="@color/gray66"
            android:text="@{@string/check_msg}"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>